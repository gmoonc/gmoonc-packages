{
  "name": "@gmoonc/app",
  "version": "0.0.4",
  "description": "Goalmoon Ctrl (gmoonc) dashboard app package: routes, pages, and layout.",
  "license": "MIT",
  "homepage": "https://gmoonc.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gmoonc/gmoonc-packages.git",
    "directory": "packages/app"
  },
  "bugs": {
    "url": "https://github.com/gmoonc/gmoonc-packages/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": ["dist", "README.md", "LICENSE"],
  "sideEffects": [
    "./dist/styles.css"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup",
    "postbuild": "node scripts/copy-css.cjs",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "@gmoonc/core": "^0.0.1",
    "@gmoonc/ui": "^0.0.1",
    "lucide-react": "^0.263.1",
    "react-router-dom": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "rimraf": "^6.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
